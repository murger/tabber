{
  "name": "tabber",
  "version": "1.4.0",
  "description": "Simple tab management",
  "main": "dist/popup.html",
  "keywords": [
    "extension",
    "chrome"
  ],
  "watches": {
    "build:html": "src/*.html",
    "build:css": "src/sass/**",
    "build:js": "src/js/**"
  },
  "scripts": {
    "test": "echo 'Error: no test specified' && exit 1",
    "build:clean": "rimraf dist",
    "build:html": "cpx 'src/*.html' dist",
    "build:css": "node-sass src/sass -o dist/css",
    "build:js": "npx rollup --config",
    "build": "npm-run-all build:*",
    "start": "npm run build && rerun-script"
  },
  "author": "GÃ¼rhan Mermer <gmermer@gmail.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "cpx": "^1.5.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "rerun-script": "^0.6.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.14.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-uglify": "^6.0.2"
  },
  "dependencies": {}
}
