{
  "name": "tabber",
  "version": "0.7.0",
  "description": "Simple tab management",
  "main": "dist/popup.html",
  "keywords": [
    "extension",
    "chrome"
  ],
  "watches": {
    "build:js": "src/js/**",
    "build:css": "src/sass/**",
    "build:html": "src/*.html"
  },
  "scripts": {
    "test": "echo 'Error: no test specified' && exit 1",
    "clean": "rimraf dist",
    "build:js": "node tasks/build.js",
    "build:css": "node-sass src/sass -o dist/css",
    "build:html": "cpx 'src/*.html' dist",
    "build": "npm-run-all clean build:*",
    "watch": "rerun-script",
    "start": "npm-run-all -s build watch"
  },
  "author": "GÃ¼rhan Mermer <gmermer@gmail.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "cpx": "^1.5.0",
    "emojic": "^1.1.15",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "rerun-script": "^0.6.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.9.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-uglify": "^6.0.2"
  },
  "dependencies": {}
}
