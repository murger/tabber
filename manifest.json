{
	"manifest_version": 2,
	"name": "Tabber",
	"version": "1.3",
	"description": "Simple tab management",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action": {
		"default_icon": "icons/icon16.png",
		"default_title": "Tabber",
		"default_popup": "dist/ext.html"
	},
	"background": {
		"scripts": ["dist/bg.js"],
		"persistent": true
	},
	"permissions": [
		"tabs"
	]
}
