{
	"manifest_version": 2,
	"name": "Tabber",
	"version": "1.3",
	"description": "Simple tab management",
	"icons": {
		"16": "icons/iconx16.png",
		"48": "icons/iconx48.png",
		"128": "icons/iconx128.png"
	},
	"browser_action": {
		"default_icon": "icons/iconx16.png",
		"default_title": "Tabber",
		"default_popup": "dist/ext.html"
	},
	"background": {
		"scripts": ["dist/bg.js"],
		"persistent": true
	},
	"permissions": [
		"tabs"
	],
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"windows": "Ctrl+E",
				"mac": "Command+E",
				"chromeos": "Ctrl+E",
				"linux": "Ctrl+E"
			}
		}
	}
}
