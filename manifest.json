{
	"manifest_version": 2,
	"name": "Tabber",
	"version": "1.0",
	"description": "Simpler tab management",
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},

	"browser_action": {
		"default_icon": "img/icon16.png",
		"default_title": "Tabber",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["js/bg.js"],
		"persistent": true
	},

	"permissions": [
		"tabs",
		"webNavigation",
		"bookmarks",
		"chrome://favicon/"
	]
}